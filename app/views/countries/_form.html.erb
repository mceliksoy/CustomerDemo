<%= form_for(@country, :remote => true, :html => { :class => "form-horizontal"}) do |f| %>
<% if @country.errors.any? %>
<div class="alert alert-block alert-error">
    <h2>Oops !</h2>
    <ul>
        <% @country.errors.full_messages.each do |msg| %>
        <li>
            <%= msg %>
        </li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="control-group <%= 'error' if @country.errors[:code].present? %>">
    <label for="code" class="control-label">Code</label>
    <div class="controls">
        <%= f.text_field :code, :class => "input-small", :maxlength => "10" %>
    </div>
</div>
<div class="control-group <%= 'error' if @country.errors[:name].present? %>">
    <label for="name" class="control-label">Name</label>
    <div class="controls">
        <%= f.text_field :name, :class => "input-xlarge", :maxlength => "100" %>
    </div>
</div>
<div class="actions">
    <%= f.submit :class => "btn btn-primary", :value => "Save" %>
    <%= link_to :back, :remote => true, :type => "reset", :class => "btn" do%>
        <i class="icon-chevron-left"></i>Cancel
    <% end %>
</div>
<% end %> 