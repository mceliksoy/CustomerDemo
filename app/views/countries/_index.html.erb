<%= render '/layouts/confirm_modal'%>

<%= form_tag  countries_path, :method => 'get', :id => "ajax_search_form" do %>
<div class="page-header">
    <h1 class="pull-left">Countries</h1>
    <div class="pull-right">
        <%= link_to new_country_path, :remote => true,
        :class => "btn btn-primary", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-star icon-white"></i> Add New Country
        <% end %>
        
        <div id="quicksearch" class="search-box">
            <%= text_field_tag :search, params[:search], :placeholder => "Search"  %>
        </div>
        <%= hidden_field_tag :ajax_search, "true" %>
    </div>
</div>
<div class="row-fluid">
    <div id="table_div" class="span12">
        <%= render :partial => 'countries_table' %>
    </div>
</div>
<% end %>
